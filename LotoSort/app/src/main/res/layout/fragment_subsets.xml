<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/subsets_hint_text"
        android:layout_marginTop="@dimen/activity_big_vertical_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin" >

        <TextView
            android:id="@+id/subsets_text_view"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </ScrollView>

    <TextView
        android:id="@+id/subsets_hint_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/subsets_hint_text"
        android:layout_above="@id/subsets_generate_button"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_big_vertical_margin"/>

    <Button
        android:id="@+id/subsets_generate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_big_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:text="@string/subsets_generate_button_text"/>

</RelativeLayout>